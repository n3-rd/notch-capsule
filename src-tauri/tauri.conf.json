{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "notch-capsule",
  "version": "0.1.0",
  "identifier": "com.n3rd.notch-capsule",
  "build": {
    "frontendDist": "../static",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Notch Capsule",
        "label": "notch-capsule",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": true,
        "resizable": true,
        "focus": false,
        "width": 200,
        "height": 32,
        "visibleOnAllWorkspaces": true,
        "shadow": false
      }
    ],
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
